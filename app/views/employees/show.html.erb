<% provide(:title, @employee.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    	<%= gravatar_for @employee %>
        <%= @employee.first_name %>
    </section>
  </aside>
  <div class="col-md-8">
      <h3>Tickets (<%= @tickets.count %>)</h3>
      <ol class="microposts">
        <%= render @tickets %>
      </ol>
      <%= will_paginate @tickets %>
  </div>
</div>