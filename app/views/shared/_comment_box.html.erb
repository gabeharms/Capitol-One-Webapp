 <div class="comment-box">
  <%= form_for(@comment, html: { multipart: true }) do |f| %>
    <%= f.text_area :message, placeholder: "Post your reply here...", class: 'new-comment-field' %>
    <%= f.submit "Reply", class: "btn btn-primary post-comment", data: { disable_with: "Posting..." } %>
    <%= f.hidden_field :id, :value => ticket.id %>
    <div class="clear-float"></div>
    <% if customer_logged_in? %>
      <div class="attach-file">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <div class="float-right customer-deletesmall">
          Delete Post<!--<%= link_to "Delete Post", ticket, method: :delete, data: { confirm: "You sure?" }, class: 'showMoreLess-button link-class' %>-->
      </div>
    <% end %>
  <% end %>
  <script type="text/javascript">
    $('#ticket_picture').bind('change', function() {
      size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
    });
  </script>
</div>