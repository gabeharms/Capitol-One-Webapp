<%= form_for(@ticket) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <% if (customer_logged_in?) %>
        <div class="new-customer-post-container">
        	<h4>Tell us how we can help...</h4>
	        <%= f.text_area :title, class: "new-ticket-field form-group", placeholder: "Write here..." %> 
	    	<div class="float-right"><%= f.submit "Post", class: "btn btn-primary new-customer-post-button" %></div>
	    	<div class="clear-float"></div>
    	</div>
    <% end %>
<% end %>