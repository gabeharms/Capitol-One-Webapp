<% provide(:title, @customer.first_name) %>
<script>
    $(document).ready(function(){
      $("#pop-up-toggle").hide();

      $("#create-popup").click(function(){
        $("#pop-up-toggle").fadeToggle();
        $("#container").fadeTo( "fast", 0.5 );
        return false;
      });

      $("#hide-popup").click(function(){
        $("#pop-up-toggle").fadeToggle();
        $("#container").fadeTo( "fast", 1 );
        return false;
      });
    });
</script>
<div class="pop-up-container" id="pop-up-toggle">
  <div class="pop-up">
    <h3>Create Ticket</h3>
    <a href="#" id="hide-popup">Close</a>
    <div class="spacer20"></div>
    <section class="micropost_form">
      <%= render 'shared/ticket_form' %>
    </section>
  </div>
</div>
<div class="container" id="container">
	
	<div class="title-left"><h3 class="page-title"><%=@customer.last_name%>, <%=@customer.first_name%></h3></div>
	<div class="title-right"><h3 class="page-title"><%=@customer.email%></h3></div>
	<div class="clear-float"></div>

	<div class="col-md-2 user-info">
		<%= link_to({:controller => 'employees', :action => 'create_ticket', :customer_id => @customer.id}) do %>
		    <a href="#" id="create-popup"><div class="create-ticket-info">Create Ticket</div></a>
		<% end %>
		<h4><br>Customer ID: <%=@customer.id%></h4>
	</div>

	<div class="col-md-10">
	    <%= render 'shared/profile_ticket_list' %>
	</div>

</div>