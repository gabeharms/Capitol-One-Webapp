<% provide(:title, @customer.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= render 'shared/customer_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/ticket_form' %>
      </section>
  </aside>
  <div class="col-md-8">
    <% if @customer.tickets.any? %>
      <h3>Tickets (<%= @customer.tickets.count %>)</h3>
      <ol class="ticket-list">
        <% @tickets.each do |ticket| %>
          <li>
            <%= link_to(ticket.title, {:controller=>'tickets', :action => 'show', :id => ticket.id}) %>
            <% if current_customer?(ticket.customer) %>
            <%= link_to "delete", ticket, method: :delete,
                                       data: { confirm: "You sure?" } %>
            <% end %>
          </li>
        <% end %>
      </ol>
      <%= will_paginate @tickets %>
    <% end %>
  </div>
</div>