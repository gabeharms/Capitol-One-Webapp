<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-3" >
    <%= link_to({:action => 'edit_info'}) do %>  
    <div class="item">Account Info</div>
  <% end %>
    <%= link_to({:action => 'edit_password'}) do %>  
    <div class="item">Change Password</div>
  <% end %>
  </div>
  <div class="col-md-6">
      <%= form_for(@customer) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :current_password %>
        <%= f.password_field :old_password, class: 'form-control form-group' %>
        
        <%= f.label :new_password %>
        <%= f.password_field :password, class: 'form-control form-group' %>
  
        <%= f.label :new_password_confirmation, "New Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control form-group' %>
        
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>