<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Captiol One", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if customer_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_customer %></li>
              <li><%= link_to "Settings", edit_customer_path(current_customer) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", customer_logout_path, method: "delete" %>
              </li>
            </ul>
          </li
        <% elsif employee_logged_in? %>
          <li><%= link_to "Customers", customers_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_employee %></li>
              <li><%= link_to "Settings", edit_employee_path(current_employee) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", employee_logout_path, method: "delete" %>
              </li>
            </ul>
          </li
        <% else %>
          <li><%= link_to "Customer Log in", customer_login_path %></li>
          <li><%= link_to "Employee Log in", employee_login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>