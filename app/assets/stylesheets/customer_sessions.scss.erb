.home-container{
	width: 100%;
}

.home-header{
	background: #002e5a;
	width: 100%;
	height: 200px;
}

.home-footer{
	background: #002e5a;
	width: 100%;
	height: 100px;
	p{
		text-align: right;
		margin: 20px 20px;
		color: #FFFFFF;
	}
	a{
		color: #FFFFFF;
		&:hover{
			text-decoration: none;
			color: #FFFFFF;
		}
	}
}

.c-login-fields{
	padding: 30px 10px 10px 10px;
	margin: 30px 0px;
	border-radius: 3px;
	border: 1px solid #b3b3b3;
	background: #FFFFFF;
	text-align: center;
}

.home-login{
	width: 100%;
	min-height: 600px;
	padding: 50px 20px;
	background: url('<%= asset_path("home-bg-texture.jpg") %> ');
}

.home-logo{
	width: 100%;
	height: auto;
	text-align: center;
	padding-top: 50px;
}

.home-content{
	width: 100%;
	height: auto;
	.ad-box{
		float: left;
		width: 200px;
		margin: 10px 0 10px 0px;
		text-align: center;
		p{
			text-align: center;
			font-weight: 500;
			line-height: 1.2em;
		}
	}
	.space-icons{
		float: left;
		width: 50px;
		display: block;
		height: 1px;
	}
}

.login-button{
	background: #bd3c2d;
	color: #FFFFFF;
	&:hover{
		background: #b12818;
	}
}